{
    "description": "BZFlag Player Portal provides an interface for managing BZFlag organizations, groups, and hosting keys.",
    "license": "AGPL-3.0-or-later",
    "require": {
        "php": ">=7.0.0",
        "slim/slim": "^3.1",
        "monolog/monolog": "^1.17",
        "slim/twig-view": "^2.3",
        "pomm-project/cli": "^2.0",
        "pomm-project/model-manager": "^2.0",
        "pomm-project/foundation": "^2.0",
        "slim/csrf": "^0.8.2",
        "slim/flash": "^0.4.0"
    },
    "require-dev": {
        "phpunit/phpunit": ">=4.8 < 6.0",
        "friendsofphp/php-cs-fixer": "^2.11"
    },
    "autoload-dev": {
        "psr-4": {
            "App\\": "src/",
            "Tests\\": "tests/"
        }
    },
    "config": {
        "process-timeout" : 0
    },
    "scripts": {
        "start": "php -S localhost:8081 -t public",
        "test": "phpunit",
        "fix": "vendor/bin/php-cs-fixer fix --allow-risky yes"
    }
}
