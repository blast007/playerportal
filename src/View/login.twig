{% extends 'Layout/main.twig' %}

{% block content %}

<form method="post">
    <input type="hidden" name="{{ csrf.name_key }}" value="{{ csrf.name }}">
    <input type="hidden" name="{{ csrf.value_key }}" value="{{ csrf.value }}">

    <label for="login_username">Username: </label><br />
    <input type="text" name="username" id="login_username" /><br />
    <label for="login_password">Password:</label><br />
    <input type="password" name="password" id="login_password"><br />
    <input type="submit" value="Login" />
</form>

{% endblock %}